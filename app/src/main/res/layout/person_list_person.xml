<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:id="@+id/person_first_name"
        style="@style/ListView"
        android:layout_width="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/person_sur_name"
        tools:text="Sam"/>


    <TextView
        android:id="@+id/person_sur_name"
        style="@style/ListView"
        android:layout_width="90dp"
        app:layout_constraintStart_toEndOf="@id/person_first_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/person_age"
        tools:text="Barnett"/>
    <TextView
        android:id="@+id/person_age"
        style="@style/ListView"
        android:layout_width="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/person_sur_name"
        app:layout_constraintEnd_toStartOf="@+id/person_weight"
        tools:text="26"/>

    <TextView
        android:id="@+id/person_weight"
        style="@style/ListView"
        android:layout_width="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/person_age"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="177" />


</androidx.constraintlayout.widget.ConstraintLayout>
